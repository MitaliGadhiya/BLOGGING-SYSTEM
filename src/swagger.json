          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  },
                  "profile_info": {
                    "type": "string"
                  }
                },
                "required": ["name", "email", "password", "role"]
              },
              "examples": {
                "Registration": {
                  "value": {
                    "name": "Mitali",
                    "email": "mitali@gmail.com",
                    "password": "1234",
                    "profile_info": "admin"
